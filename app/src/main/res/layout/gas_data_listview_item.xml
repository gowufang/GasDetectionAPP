<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#ffffff">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/cyan">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ID"
                    android:id="@+id/Id_key"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:padding="0dp"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="27179"
                    android:id="@+id/Id_value"
                    android:textColor="#ffffff"
                    android:padding="0dp"
                    android:textSize="14dp"
                    android:gravity="left|center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="设备编号"
                    android:id="@+id/EquipmentNumber_key"
                    android:layout_weight="1"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:padding="0dp"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="ID-001"
                    android:id="@+id/EquipmentNumber_value"
                    android:textColor="#ffffff"
                    android:textIsSelectable="false"
                    android:padding="0dp"
                    android:textSize="14dp"
                    android:gravity="left|center" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="采集时间"
                    android:id="@+id/AcquisitionTime_key"
                    android:textColor="@color/cyan"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="2017-07-07 08:48:31"
                    android:id="@+id/AcquisitionTime_value"
                    android:gravity="center"
                    android:textColor="@color/cyan" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="经度"
                    android:id="@+id/Longitude_key"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/cyan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="121.905124"
                    android:id="@+id/Longitude_value"
                    android:textColor="@color/cyan"
                    android:gravity="left|center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="纬度"
                    android:id="@+id/Latitude_key"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/cyan" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="30.875977"
                    android:id="@+id/Latitude_value"
                    android:textColor="@color/cyan"
                    android:gravity="left|center" />
            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                >

        </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</LinearLayout>
